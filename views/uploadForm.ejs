<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="uploadForm">
                    <div class="form-group">
                        <label for="bookTitle">Title</label>
                        <input type="text" class="form-control" id="bookTitle" aria-describedby="book title"
                            placeholder="Enter Book Title">
                    </div>
                    <div class="form-group">
                        <label for="bookTags">Tags</label>
                        <input type="text" class="form-control" id="bookTags" aria-describedby="book tags"
                            placeholder="Add Tags">
                    </div>
                    <input id="uploadImage" type="file" name="photo" multiple/ style="display: none">

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="upload" type="button" class="btn btn-primary">Add Files</button>
                <button id="uploadSubmit" type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>